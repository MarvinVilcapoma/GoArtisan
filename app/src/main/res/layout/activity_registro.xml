<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wl1"
    android:padding="20dp"
    android:orientation="vertical"
    tools:context=".activities.RegistroActivity">
    <ScrollView
        android:id="@+id/SV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/shape3"
            android:orientation="vertical">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/a2" />

            <ProgressBar
                android:id="@+id/progressbarRegisterUser"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_gravity="center"
                tools:visibility="gone"
                android:layout_marginTop="150dp"
                android:layout_marginBottom="250dp"/>

            <LinearLayout
                android:id="@+id/contentRegisterUser"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="32dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Registro de Usuario"
                    android:textSize="30dp"
                    android:layout_marginBottom="20dp">

                </TextView>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/inputNombreRegister"
                        android:layout_width="260dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"

                        android:drawableStart="@drawable/ic_usuario_hombre"
                        android:drawablePadding="7dp"
                        android:textSize="16sp"
                        android:hint="Ingrese sus nombres"
                        android:inputType="text"
                        android:maxLines="1" />
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/inputApellidoRegister"
                        android:layout_width="260dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"

                        android:drawableStart="@drawable/ic_usuario_hombre"
                        android:drawablePadding="7dp"
                        android:textSize="16sp"
                        android:hint="Ingrese sus apellidos"
                        android:inputType="text"
                        android:maxLines="1" />
                </android.support.design.widget.TextInputLayout>




                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/inputDNIRegister"
                        android:layout_width="260dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:drawableStart="@drawable/ic_dni_de_periodista"
                        android:drawablePadding="7dp"
                        android:textSize="16sp"
                        android:hint="Ingrese su DNI"
                        android:ems="8"
                        android:maxLength="8"
                        android:digits="1234567890"
                        android:inputType="number"
                        android:maxLines="1" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/inputCorreoRegister"
                        android:layout_width="260dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:drawableStart="@drawable/ic_sobre"
                        android:drawablePadding="7dp"
                        android:textSize="16sp"
                        android:hint="Ingrese su correo eléctronico"
                        android:inputType="textEmailAddress"
                        android:maxLines="1" />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/inputDireccionRegister"
                        android:layout_width="260dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"

                        android:drawableStart="@drawable/ic_home_address"
                        android:drawablePadding="7dp"
                        android:textSize="16sp"
                        android:hint="Ingrese su dirección"
                        android:inputType="text"
                        android:maxLines="1" />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:ems="9"
                        android:id="@+id/inputCelularRegister"
                        android:layout_width="260dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:digits="1234567890"
                        android:drawableStart="@drawable/ic_llamada_de_telefono_inteligente"
                        android:drawablePadding="7dp"
                        android:textSize="16sp"
                        android:maxLength="9"
                        android:hint="Ingrese su número celular"
                        android:inputType="number"
                        android:maxLines="1" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    app:passwordToggleEnabled="true"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/inputContraseñaRegister"
                        android:layout_width="260dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:drawableStart="@drawable/ic_bloquear"
                        android:drawablePadding="7dp"
                        android:textSize="16sp"
                        android:layout_marginBottom="16dp"
                        android:hint="Ingrese una contraseña"
                        android:inputType="textPassword"
                        android:maxLines="1" />


                </android.support.design.widget.TextInputLayout>




                <Button
                    android:id="@+id/btn_crear_cuenta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/shape"
                    android:elevation="5dp"
                    android:text="CREAR CUENTA"
                    android:onClick="callRegister"
                    android:textColor="#ffffff"
                    android:textSize="16sp" />

                <View
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:background="#615454"
                    android:layout_height="2dp">

                </View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¿Ya tienes cuenta?"
                        android:textColor="#000"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/btn_ir_inicioSesion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@android:color/transparent"
                        android:onClick="irLogin"
                        android:text="Iniciar Sesión"
                        android:textColor="#000" />


            </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>